{
  "version": 2,
  "framework": null,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/src",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { 
      "distDir": "src"
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/src/assets/$1"
    },
    {
      "src": "/(.+\\.js)",
      "headers": { "Content-Type": "application/javascript" },
      "dest": "/client/src/$1"
    },
    {
      "src": "/(.+\\.css)",
      "headers": { "Content-Type": "text/css" },
      "dest": "/client/src/index.html"
    },
    {
      "src": "/(.+\\.(png|jpg|jpeg|gif|ico|svg|webp))",
      "dest": "/client/src/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/src/index.html"
    }
  ]
} 