{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*\\.js)",
      "headers": { "Content-Type": "application/javascript" },
      "dest": "client/dist/$1"
    },
    {
      "src": "/(.*\\.css)",
      "headers": { "Content-Type": "text/css" },
      "dest": "client/dist/$1"
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|gif|ico|svg|webp))",
      "dest": "client/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/index.html"
    }
  ]
} 